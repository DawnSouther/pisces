{
  "name": "musubi",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/musubi/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/musubi",
        "main": "packages/musubi/src/index.ts",
        "tsConfig": "packages/musubi/tsconfig.lib.json",
        "assets": ["packages/musubi/*.md"]
      }
    },
    "tsc": {
      "command": "tsc -p tsconfig.schematics.json",
      "options": {
        "cwd": "packages/musubi"
      }
    },
    "update": {
      "command": "schematics .:update --debug==false",
      "options": {
        "cwd": "packages/musubi"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/musubi/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/musubi/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
