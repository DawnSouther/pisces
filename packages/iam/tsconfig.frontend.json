{
  "extends": "./tsconfig.json",
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "files": [
    "src/app/main.frontend.ts",
    "src/app/infra/config/app.module.server.ts",
    "src/app/main.server.ts"
  ],
  "include": [
    "src/**/*.frontend.ts",
    "src/**/view/**/*.ts",
    "src/**/domain/**/*.ts",
    "src/**/infra/**/*.frontend.ts"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  }
}
