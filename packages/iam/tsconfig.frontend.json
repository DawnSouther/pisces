{
  "extends": "./tsconfig.json",
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "files": [
    "src/app/app.module.server.ts",
    "src/app/iam-app.module.ts",
    "src/main-frontend.ts",
    "src/main.server.ts",
    "server.ts"
  ],
  "include": [
    "src/**/*.frontend.module.ts",
    "src/**/view/**/*.ts",
    "src/**/domain/**/*.ts",
    "src/**/infra/**/*.ts"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  }
}
