{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/backend",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "files": [
    "src/app/main.backend.ts"
  ],
  "include": [
    "src/**/*.controller.ts",
    "src/**/*.repository.ts",
    "src/**/*.backend.module.ts",
    "src/**/domain/**/*.ts",
    "src/**/infra/**/*.backend.ts"
  ]
}
