{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "declaration": false,
    "module": "es2020",
    "paths": {
      "@pisces/musubi": ["packages/musubi/src/index.ts"],
      "@pisces/musubi/server": ["packages/musubi/src/lib/server/index.ts"],
      "@pisces/musubi/client": ["packages/musubi/src/lib/client/index.ts"],
      "@core": ["packages/frontend/src/app/core"],
      "@core/*": ["packages/frontend/src/app/core/*"],
      "@shared": ["packages/frontend/src/app/shared"],
      "@shared/*": ["packages/frontend/src/app/shared/*"],
      "@theme": ["packages/frontend/src/app/theme"],
      "@theme/*": ["packages/frontend/src/app/theme/*"],
      "@testing": ["packages/frontend/src/testing"],
      "@testing/*": ["packages/frontend/src/testing/*"],
      "@env": ["packages/frontend/src/environments"],
      "@env/*": ["packages/frontend/src/environments/*"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./tsconfig.editor.json"
    }
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
